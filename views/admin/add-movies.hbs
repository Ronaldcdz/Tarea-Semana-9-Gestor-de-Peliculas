<div class="row">

    <div class="col-md-6 offset-3 mt-5" id="main-container">



        <div class="card">
            <div class="card-header text-dark bg-personal-data">
                <h4 class="text-center" name="datosPersonales">{{#if editMode}}Editar Pel&iacute;culas{{else}}Agregar Pel&iacute;cula{{/if}}</h4>
            </div>

            <div class="card-body">

                <form action="{{#if editMode}}/admin/edit-movies{{else}}/admin/add-movies{{/if}}" method="POST">

                    <div class="mt-3 mb-3"> 
                        <label for="name-movie" class="form-label">Nombre de la Pel&iacute;cula:</label>
                        <input type="text" id="name-movie"  class="form-control border-radius"
                            placeholder="Digite el nombre de la pelicula" value="{{#if editMode}}{{movie.name}}{{/if}}" name="name" required/ >
                    </div>

                    <div class="mt-3 mb-3">
                        <label for="description" class="form-label">Descripci&oacute;n:</label>
                        <input type="text" id="description" class="form-control border-radius"
                            placeholder="Escriba de quÃ© trata la pelicula" value="{{#if editMode}}{{movie.description}}{{/if}}" name="description" required/>
                    </div>

                    <div class="mt-3 mb-3">
                        <label for="description" class="form-label">Url de la imagen:</label>
                        <input type="text" id="imageUrl" class="form-control border-radius"
                            placeholder="Copie y pegue el link de una imagen" value="{{#if editMode}}{{movie.imageUrl}}{{/if}}" name="imageUrl" required/>
                    </div>


                    <div class="mt-3 mb-3">
                        <label for="gender" class="form-label">G&eacute;nero:</label>
                        <select class="form-select border-radius" id="gender"  name="gender" required >

                            <option value="" {{#if editMode}}{{else}}selected{{/if}}>Selecione el g&eacute;nero de la pel&iacute;cula</option>
                            <option value="Accion" {{#if editMode}} {{#if (isSelectedAccion movie.gender)}}selected{{/if}}{{/if}}>Acci&oacute;n</option>
                            <option value="Terror" {{#if editMode}} {{#if (isSelectedTerror movie.gender)}}selected{{/if}}{{/if}}>Terror</option>
                            <option value="Comedia" {{#if editMode}} {{#if (isSelectedComedia movie.gender)}}selected{{/if}}{{/if}}>Comedia</option>
                            <option value="Suspenso" {{#if editMode}} {{#if (isSelectedSuspenso movie.gender)}}selected{{/if}}{{/if}}>Suspenso</option>
                            <option value="Documentales" {{#if editMode}} {{#if (isSelectedDocumentales movie.gender)}}selected{{/if}}{{/if}}>Documentales</option>
                        </select>
                    </div>

                    <div>
                        <label for="selectActive" class="form-label">Activo:</label>
                        <br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="selectActive" id="radio-active-si"
                                value="Si" {{#if editMode}} {{#if movie.active}}checked{{/if}} {{else}}checked{{/if}} />
                            <label class="form-check-label" for="radio-active-si">S&iacute;</label>
                        </div>

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="selectActive" id="radio-active-no"
                                value="No"{{#if editMode}} {{#if movie.active}}{{else}}checked{{/if}}{{/if}}/>
                            <label class="form-check-label" for="radio-active-no">No</label>
                        </div>

                    {{#if editMode}}

                        <input type="hidden" value="{{movie.id}}" name="movieId"/>

                    {{/if}}

                    </div>
                    <div class="mt-3 mb-3">
                        <button type="submit" class="btn btn-light bg-personal-data float-end"
                            id="btn-send">{{#if editMode}}Guardar{{else}}Agregar{{/if}}</button>
                    </div>
                </form>

            </div>
        </div>








    </div>